{
  "scripts": [
    {
      "id": 1,
      "question": "귀살대 신병으로 처음 들어가게되었다.\n 이때에 내 마음 가짐은",
      "options": [
        {"id":"1", "text": "목숨을 바쳐서라도 오니로부터 많은 사람들을 지키겠어", "weights": { "공격": 2, "헌신": 1 } },
        {"id":"2", "text": "신중히 임무를 수행하며, 내 안전도 지켜야겠어", "weights": { "신중": 1, "침착": 1, "결단": 1 } },
        {"id":"3", "text": "먼저 경험 많은 동료들을 관찰하여 배우자", "weights": { "침착": 1, "협력": 1, "신중": 1 } },
        {"id":"4", "text": "임무를 완수할 새로운 전략이나 방법에 대해 고민해보자", "weights": { "창의": 3, "침착": 1 } }
      ]
    },
    {
      "id": 2,
      "question": "까마귀로부터 오니 퇴치 지령을 받았다.\n 임무를 수행하기 전 나는…",
      "options": [
        {"id":"1", "text": "…당장 출발하자!", "weights": { "열정": 2, "공격": 1 } },
        {"id":"2", "text": "…정보부터 모으자", "weights": { "신중": 1, "헌신": 1, "결단": 1 } },
        {"id":"3", "text": "…동료를 구해 함께하자", "weights": { "협력": 2, "결단": 1 } },
        {"id":"4", "text": "…전략부터 세우자", "weights": { "창의": 2, "열정": 1 } }
      ]
    },
    {
      "id": 3,
      "question": "마을에 도착했는데\n 오니의 흔적이 사방에 퍼져있다.",
      "options": [
        {"id":"1", "text": "바로 추적해!", "weights": { "공격": 2, "결단": 2 } },
        {"id":"2", "text": "주변 상황부터 파악", "weights": { "신중": 1, "침착": 1, "헌신": 1 } },
        {"id":"3", "text": "남은 사람들 구호 우선", "weights": { "헌신": 2, "협력": 2 } },
        {"id":"4", "text": "함정/환경 활용", "weights": { "창의": 2 } }
      ]
    },
    {
      "id": 4,
      "question": "저 멀리서,\n 오니의 기척이 느껴진다.",
      "options": [
        {"id":"1", "text": "지체 없이 섬멸", "weights": { "공격": 2, "열정": 1 } },
        {"id":"2", "text": "은밀히 접근해 기습", "weights": { "결단": 1, "공격": 1, "신중": 1 } },
        {"id":"3", "text": "몸을 숨기고 특성 파악", "weights": { "신중": 1, "침착": 1, "창의": 1 } },
        {"id":"4", "text": "유인·함정 전술", "weights": { "창의": 2, "헌신": 1 } }
      ]
    },
    {
      "id": 5,
      "question": "끔찍한 전투 중,\n 민간인이 전장에 있다. 나는…",
      "options": [
        {"id":"1", "text": "민간인 대피 우선", "weights": { "헌신": 2 } },
        {"id":"2", "text": "기회를 놓치지 않고 섬멸", "weights": { "공격": 2, "결단": 2 } },
        {"id":"3", "text": "보호하며 교전 병행", "weights": { "헌신": 1, "공격": 2 } },
        {"id":"4", "text": "역할 분담(보호/교전) 제안", "weights": { "협력": 2 } }
      ]
    },
    {
      "id": 6,
      "question": "전투 도중\n 동료와 의견이 갈린다.",
      "options": [
        {"id":"1", "text": "내 의견을 밀어붙인다", "weights": { "공격": 1, "결단": 1 } },
        {"id":"2", "text": "동료 의견을 받아들인다", "weights": { "협력": 1, "침착": 1 } },
        {"id":"3", "text": "절충안을 만든다", "weights": { "창의": 1, "협력": 1 } },
        {"id":"4", "text": "잠시 시간을 두고 재평가", "weights": { "신중": 1, "침착": 1 } }
      ]
    },
    {
      "id": 7,
      "question": "아끼는 동료가\n 오니가 되었다.",
      "options": [
        {"id":"1", "text": "처치 결단", "weights": { "침착": 1, "열정": 1, "결단": 1 } },
        {"id":"2", "text": "당장 죽이지 말고 대안 모색", "weights": { "창의": 1, "신중": 2 } },
        {"id":"3", "text": "끝까지 내가 감당(살려둔다)", "weights": { "헌신": 2 } }]
    },
    {
      "id": 8,
      "question": "임무를 마친 후,\n 동료들과 휴식 시간. 나는…",
      "options": [
        {"id":"1", "text": "오늘 복기·다음 계획 수립", "weights": { "신중": 1, "결단": 2 } },
        {"id":"2", "text": "조용히 회복에 집중", "weights": { "침착": 1, "헌신": 1, "열정": 1 } },
        {"id":"3", "text": "가벼운 농담/게임으로 분위기 전환", "weights": { "열정": 2, "협력": 1 } },
        {"id":"4", "text": "힘든 동료 먼저 챙기기", "weights": { "협력": 1, "헌신": 1 } }
      ]
    },
    {
      "id": 9,
      "question": "동료와 체력 훈련 중.\n 나는…",
      "options": [
        {"id":"1", "text": "스피드 대결!", "weights": { "열정": 2, "협력": 1 } },
        {"id":"2", "text": "내 페이스로 집중", "weights": { "신중": 2, "헌신": 1 } },
        {"id":"3", "text": "힘든 동료 페이스 맞추기", "weights": { "협력": 2 } },
        {"id":"4", "text": "새로운 자세/방법 시도", "weights": { "창의": 2, "열정": 1 } }
      ]
    },
    {
      "id": 10,
      "question": "혼자만의 여가 시간.\n 나는…",
      "options": [
        {"id":"1", "text": "가족과 시간", "weights": { "협력": 1, "열정": 3 } },
        {"id":"2", "text": "맛있는 음식으로 힐링", "weights": { "침착": 1, "열정": 2 } },
        {"id":"3", "text": "동료들과 어울리기", "weights": { "협력": 1, "열정": 1, "결단": 1 } },
        {"id":"4", "text": "낮잠/독서/게임 등 혼자 쉬기", "weights": { "침착": 2, "열정": 1 } }
      ]
    },
    {
      "id": 11,
      "question": "준비 없이 오니의 기습을 받았다.\n 나는…",
      "options": [
        {"id":"1", "text": "즉시 맞섬", "weights": { "공격": 2, "결단": 1 } },
        {"id":"2", "text": "회피·자세 정비", "weights": { "신중": 1, "침착": 2, "헌신": 1 } },
        {"id":"3", "text": "최소 준비 후 합류", "weights": { "창의": 2, "열정": 1 } },
        {"id":"4", "text": "대피 지원 역할", "weights": { "협력": 1, "헌신": 2 } }
      ]
    },
    {
      "id": 12,
      "question": "터무니없이 강력한 오니를 만났다.\n 나는…",
      "options": [
        {"id":"1", "text": "선제 공격으로 기선 제압", "weights": { "공격": 2, "결단": 1 } },
        {"id":"2", "text": "거리 두고 약점 파악", "weights": { "신중": 1, "침착": 1, "결단": 1 } },
        {"id":"3", "text": "연계 플레이로 대응", "weights": { "협력": 1, "열정": 1 } },
        {"id":"4", "text": "유인·환경활용 안전대응", "weights": { "창의": 2, "헌신": 1 } }
      ]
    },
    {
      "id": 13,
      "question": "죽음이 다가온다.\n 나는…",
      "options": [
        {"id":"1", "text": "내가 죽더라도 뒤를 지킨다", "weights": { "헌신": 2 } },
        {"id":"2", "text": "지금은 후퇴해 더 많은 생명을 구한다", "weights": { "신중": 2, "침착": 1 } }]
      }
  ]
}
